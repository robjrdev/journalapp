<%= @category.title%>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
  </tr>
  <% @tasks.each do |task|%>
    <%= task.inspect%>
    <tr>
      <td><%= task.title%></td>
      <td><%= task.description%></td>
      <td><%= task.deadline%></td>
      <td class="border px-4 py-2">
        <%= link_to "", category_task_path(@category.id, task), class: "fa-solid fa-eye"%>
      </td>
      <td class="border px-4 py-2">
        <%= link_to "", edit_category_task_path(@category.id, task), class: "fas fa-edit"%>
      </td>
      <td class="border px-4 py-2">
        <%= link_to "", category_task_path(@category.id, task), data: {
turbo_method: :delete,
turbo_confirm: "Are you sure?"}, class: "fas fa-trash-alt"%>
      </td>
    </tr>
  <%end%>
</table>
<div class="flex justify-center mt-8">
  <%= link_to "New Task", new_category_task_path, class: "text-white bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded" %>
</div>
