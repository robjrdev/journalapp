<div class="w-full flex justify-center">
  <div class="p-4 w-2/4">
    <h1 class="text-2xl font-bold mb-4">Categories</h1>
    <table class="table-fixed w-full">
      <thead>
        <tr>
          <th class="w-1/2 px-4 py-2">Category</th>
          <th class="w-1/4 px-4 py-2">Add Task</th>
          <th class="w-1/4 px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <% if category.user == current_user %>
            <tr>
              <td class="border px-4 py-2 text-center"><%= category.title %></td>
              <td class="border px-4 py-2 flex justify-center"><%= link_to "Add Task", new_category_task_path(category.id), class: "text-white bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded" %></td>
              <td class="border px-4 py-2  text-center">
                <%= link_to "", category_tasks_path(category), class: "fa-solid fa-eye text-blue-500 hover:text-blue-700 mx-2" %>
                <%= link_to "", edit_category_path(category), class: "fas fa-edit text-blue-500 hover:text-blue-700 mx-2" %>
                <%= link_to "", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "fas fa-trash-alt text-red-500 hover:text-red-700 mx-2" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="flex justify-center mt-8">
      <%= link_to "New Category", new_category_path, class: "text-white bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
